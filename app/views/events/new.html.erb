<%= form_with model:@event do |f|%> 
<%= label_tag(:event_name, "Event Name", class: "") %>
  <%= f.text_field :event_name %>
  <br/>
  <%= label_tag(:event_place, "Event Location") %>
  <%= f.text_field :event_place %>
  <br/>
  <%= label_tag(:event_date, "Event Date") %>
  <%= datetime_local_field(:event, :event_date) %>
  <br/>
  <%= label_tag(:event_image, "Choose event image") %>
  <%= f.file_field :event_image %>
  <br/>
  <%= f.submit "Create Event", class: "btn btn-success" %>
<% end %>
